<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.root.rashidgroupapp.Activity.SalesStatusActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/sales_status_toolbar"
            android:background="#32c0ee"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:orientation="horizontal"
                >


                <TextView
                    android:id="@+id/sales_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".8"
                    android:text="Sales Status"
                    android:textSize="25sp"
                    android:textColor="@android:color/white"
                    />

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>





                <ListView
                    android:id="@+id/sales_status_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />




    </LinearLayout>
</RelativeLayout>
